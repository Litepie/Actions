{
    "name": "litepie/actions",
    "description": "A comprehensive Laravel Actions package for implementing the Action pattern with validation, events, and caching",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lavalite Team",
            "email": "support@lavalite.org",
            "homepage": "https://lavalite.org"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/validation": "^11.0|^12.0",
        "illuminate/cache": "^11.0|^12.0",
        "illuminate/events": "^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0|^12.0",
        "orchestra/testbench": "^9.0|^10.0|^11.0",
        "pestphp/pest": "^2.0|^3.0",
        "pestphp/pest-plugin-laravel": "^2.0|^3.0",
        "phpstan/phpstan": "^1.10",
        "larastan/larastan": "^2.0",
        "rector/rector": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Litepie\\Actions\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Litepie\\Actions\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Litepie\\Actions\\ActionsServiceProvider"
            ],
            "aliases": {
                "ActionManager": "Litepie\\Actions\\Facades\\ActionManager"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "refactor": "vendor/bin/rector process"
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
